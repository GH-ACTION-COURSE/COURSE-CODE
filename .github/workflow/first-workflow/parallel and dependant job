name: parallel-job-macos

on:
  - push

jobs:
  run-shell-commands:
    runs-on: macos-latest
    steps:
      - name: View macOS version
        run: sw_vers

  parallel-job-macos:
    runs-on: macos-latest
    steps:
      - name: View macOS version
        run: sw_vers

  dependant-jobs:
    runs-on: windows-latest
    needs: run-shell-commands
    steps:
      - name: Echo a string
        run: write-output "windows string"

      - name: Error step
        run: doesnotexist # Fixed typo from 'doesnotexits' to 'doesnotexist'
